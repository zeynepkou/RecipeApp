<Window x:Class="RecipeApp.YeniMalzemeEkle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Malzeme Ekle" Height="300" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Malzeme Adı" FontWeight="Bold" />
        <TextBox x:Name="malzemeAdiTextBox" Margin="0,5,0,10" />

        <TextBlock Text="Malzeme Miktarı" FontWeight="Bold" />
        <TextBox x:Name="malzemeMiktariTextBox" Margin="0,5,0,10" />

        <TextBlock Text="Malzeme Birimi" FontWeight="Bold" />
        <TextBox x:Name="malzemeBirimiTextBox" Margin="0,5,0,10" />

        <Button Content="Ekle" Click="EkleButton_Click" Width="100" Height="30" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
